    android:id="@+id/frameSOS"
    android:layout_height="match_parent"
    tools:context=".fragments.SosFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGreetingsProfile"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_profile" />


        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/gelasio"
            android:text="Byenvini, "
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="ExtraText" />

        <TextView
            android:id="@+id/tvGreetingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/gelasio"
            android:text="entel"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="ExtraText" />

        <RelativeLayout
            android:id="@+id/rlInstructions"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/ivGreetingsProfile"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/warning" />

            <TextView
                android:id="@+id/tvGreetings2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/gelasio"
                android:lineSpacingExtra="2sp"
                android:text="@string/mesaj_byenvini"
                android:textColor="#000000"
                android:textSize="14sp" />


        </RelativeLayout>

