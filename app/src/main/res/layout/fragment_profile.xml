<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PWOFIL"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPHeader"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProfilePic"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ivProfilePic"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="username" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/ivProfilePic"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            tools:text="description" />


        <RelativeLayout
            android:id="@+id/btnEMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnLang"
            android:clickable="true"
            android:padding="2dp">

            <ImageView
                android:id="@+id/shape1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/fill_btns_shape"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/iconMsg"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignStart="@+id/shape1"
                android:layout_alignTop="@+id/shape1"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/sos_message" />

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/shape1"
                android:layout_marginTop="20dp"
                android:layout_alignEnd="@+id/shape1"
                android:layout_toEndOf="@id/iconMsg"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=" Mesaj Ijans"
                tools:text="Mesaj Ijans : 'M an danje' " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLang"
            android:layout_above="@+id/btnFFriends"
            android:padding="2dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape2"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/languages"
                android:layout_alignStart="@+id/shape2"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconLang"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chwazi Lang"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconLang"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFFriends"
            android:layout_above="@+id/btnshare"
            android:padding="2dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape3"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/find_friends"
                android:layout_alignStart="@+id/shape3"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconFFriends" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jwenn zanmi"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconFFriends"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnshare"
            android:layout_above="@id/btnSettings"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape4"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/share"
                android:layout_alignStart="@+id/shape4"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconShare"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pataje aplikasyon an"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconShare"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            android:layout_above="@id/logout"
            android:padding="2dp"
            android:layout_marginBottom="80dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape5"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                android:layout_alignStart="@+id/shape5"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconSettings"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ParamÃ¨t"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconSettings"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:padding="15dp">

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/logout_btn_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DEKONEKTE"
                android:textColor="@color/gray_text"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>