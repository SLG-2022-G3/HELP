<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PWOFIL"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPHeader"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProfilePic"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ivProfilePic"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="username" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/ivProfilePic"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            tools:text="Phone Number" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNumber"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/ivProfilePic"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            tools:text="Email" />

        <RelativeLayout
            android:id="@+id/rlInfoPerso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfilePic"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_perso_info_bg"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/icInfo"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignStart="@+id/shape"
                android:layout_alignTop="@+id/shape"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_info" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shape"
                android:layout_alignEnd="@+id/shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="65dp"
                android:layout_toEndOf="@id/icInfo"
                android:fontFamily="sans-serif-light"
                android:text=" Ajoute Enfomasyon sou sante w ki ka itil si gen yon ijans"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text=" Klike la pou ajoute kek enfomasyon sou sante w tankou : Aleji, Enstriksyon sou san, elatriye  ' " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEMsg"
            android:layout_below="@+id/rlInfoPerso"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape3"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/sos_message"
                android:layout_alignStart="@+id/shape3"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconFFriends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/iconFFriends"
                android:fontFamily="sans-serif-light"
                android:text="Mesaj Ijans"
                android:id="@+id/tvMsg"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnshare"
            android:layout_below="@+id/btnEMsg"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape4"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/share"
                android:layout_alignStart="@+id/shape4"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconShare"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pataje aplikasyon an"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconShare"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            android:layout_below="@+id/btnshare"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/shape5"
                android:clickable="true"
                android:src="@drawable/fill_btns_shape" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                android:layout_alignStart="@+id/shape5"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:id="@+id/iconSettings"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ParamÃ¨t"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:layout_toEndOf="@id/iconSettings"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:padding="15dp">

            <ImageView
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/logout_btn_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="DEKONEKTE"
                android:textColor="@color/gray_text"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>