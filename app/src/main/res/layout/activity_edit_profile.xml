<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EditProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/red">
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/header"
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editInfoBtn"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />
    <ImageView

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/ivCam"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_pic"
        />
    <ImageButton
        android:id="@+id/btnCam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCam"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="220dp"
        android:backgroundTint="@color/green"
        android:contentDescription="@string/capture_image"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:tint="@color/black" />
    <ImageButton
        android:id="@+id/btnGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCam"
        android:layout_marginTop="10dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/green"
        android:contentDescription="@string/capture_image"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_photo_library_24"
        app:tint="@color/black" />
    <EditText
        android:id="@+id/etTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_below="@+id/btnCam"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Nimewo Telefon"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/etTelephone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Imel"/>

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Enfomasyon Pesonel"/>

    <EditText
        android:id="@+id/etMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/etInfo"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Mesaj Ijans"/>





</RelativeLayout>